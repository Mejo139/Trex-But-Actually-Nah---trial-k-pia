                  <Insets bottom="15.0" left="160.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="restartButton" alignment="CENTER" mnemonicParsing="false" onAction="#onPlay" styleClass="restartButton" text="RESTART" textAlignment="CENTER" textFill="WHITE">
