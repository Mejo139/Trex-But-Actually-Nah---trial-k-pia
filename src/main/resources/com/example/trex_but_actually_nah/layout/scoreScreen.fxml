<AnchorPane prefHeight="800.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trex_but_actually_nah.Game">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#515961" height="800.0" opacity="0.5" stroke="BLACK" strokeType="INSIDE" width="600.0" />
      <VBox layoutX="110.0" layoutY="180.0" prefHeight="200.0" prefWidth="400.0" styleClass="pauseSceneBackground">
         <children>
            <Label alignment="CENTER" text="GAME OVER!" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" left="142.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Showcard Gothic" size="20.0" />
               </font>
            </Label>
            <Label fx:id="scoreText" text=" " textFill="WHITE">
